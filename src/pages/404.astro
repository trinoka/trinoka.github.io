---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Page Not Found"
  description="The page you are looking for could not be found on the Trinoka LLP website."
>
  <section class="section-padding min-h-[60vh] flex items-center">
    <div class="container-main">
      <div class="max-w-2xl mx-auto text-center">
        <div class="mb-8">
          <span class="text-8xl font-bold text-gray-200">404</span>
        </div>
        
        <h1 class="heading-primary mb-4">Page Not Found</h1>
        
        <p class="text-lg text-gray-600 mb-8">
          The page you are looking for might have been removed, had its name changed, 
          or is temporarily unavailable.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/" class="btn btn-primary">
            Go to Home
          </a>
          <a href="/contact/" class="btn btn-outline">
            Contact Us
          </a>
        </div>
        
        <div class="mt-12 pt-8 border-t border-gray-200">
          <p class="text-gray-500 text-sm mb-4">
            Looking for something specific? Try these pages:
          </p>
          <nav class="flex flex-wrap justify-center gap-4" aria-label="Quick links">
            <a href="/about/" class="text-[var(--color-accent)] hover:underline">About Us</a>
            <a href="/business/" class="text-[var(--color-accent)] hover:underline">Business Domains</a>
            <a href="/legal/" class="text-[var(--color-accent)] hover:underline">Legal</a>
          </nav>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
